{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start debugging and open Chrome",

      "type": "node-terminal",
      "request": "launch",
      "command": "npm run start",

      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": ".*http://localhost:(\\d*).*",
        "uriFormat": "http://localhost:%s"
      }
    }
  ]
}
